.edit-user {
  background-color: #fff;
  padding: 16px;
  border-radius: 2px;
  min-height: calc(100vh - 206px);

  .title {
    font-size: 18px;
  }
  .btn-group {
    margin: 16px 0;

    .save-btn {
      margin: 0 16px;
    }
  }
  .user-base-info {
    margin: 16px 0;
    border: 1px solid #dbdfe7;
    border-radius: 4px;
    padding: 16px;

    .user-base-info-1 {
      margin: 8px 0;
      display: flex;
      justify-content: space-between;

      .large-text {
        font-size: 20px;
      }
    }
    .user-base-info-2 {
      margin: 8px 0;
      display: flex;
      justify-content: space-between;

      div {
        flex: 1;
      }
    }
  }
  .user-info {
    margin: 16px 0;
    border: 1px solid #dbdfe7;
    border-radius: 4px;
    padding: 16px;
  }
  .user-permission-tab {
    .ant-tabs-nav {
      margin-bottom: 0;
    }
  }
  .permission-info {
    border: 1px solid #dbdfe7;
    border-radius: 4px;
  }
  .end-list {
    list-style: none;
    margin: 16px 0;
    padding: 4px 8px;
    line-height: 32px;
  }
  .permission-info-body {
    .permission-info-title {
      border-bottom: 1px solid #dbdfe7;
      padding: 16px;
    }
    .permission-info-role {
      display: flex;

      .permission-info-role-left {
        padding: 16px;
        flex: 1;
      }
      .permission-info-role-right {
        padding: 16px;
        flex: 3;
        border-left: 1px solid #dbdfe7;

        .permission-info-title-2 {
          padding-top: 16px;
        }
        .role-table-search {
          display: flex;
          margin: 16px 0;
          justify-content: flex-end;
        }
      }
    }
  }
  .permission-info-menu-title {
    border: 1px solid #dbdfe7;
    border-left: none;
    border-right: none;
    padding: 16px;
  }
  .permission-info-menu {
    min-height: 200px;
    margin: 32px;
  }
}